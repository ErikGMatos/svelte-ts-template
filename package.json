{
  "name": "svelte-app",
  "license": "ISC",
  "version": "1.0.0",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix",
      "git add"
    ],
    "{public,src}/**/*.{scss,css,html}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.svelte": [
      "stylelint --fix",
      "yarn validate",
      "cross-env CI=true yarn test --bail --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.11.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "autoprefixer": "^10.2.5",
    "commitlint-config-rocketseat": "^0.0.1",
    "cross-env": "^7.0.2",
    "css-loader": "^5.1.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-svelte3": "^3.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "mini-css-extract-plugin": "^1.3.4",
    "postcss": "^8.2.5",
    "postcss-import": "^13.0.0",
    "postcss-load-config": "^3.0.1",
    "postcss-loader": "^5.2.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.8",
    "sirv-cli": "^1.0.11",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-recommended": "^4.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "svelte": "^3.32.1",
    "svelte-check": "^1.1.33",
    "svelte-loader": "^3.0.0",
    "svelte-preprocess": "^4.6.6",
    "ts-loader": "^8.0.18",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "build": "rm -rf dist && cross-env APP_ENV=production NODE_ENV=production webpack",
    "dev": "cross-env APP_ENV=development webpack serve --content-base public",
    "sirv": "sirv dist --port 5000",
    "format": "prettier --write '{public,src}/**/*.{css,html,js,ts}'",
    "format:stylelint": "stylelint '**/*.{scss, css}'",
    "validate": "svelte-check",
    "test": "jest"
  }
}
